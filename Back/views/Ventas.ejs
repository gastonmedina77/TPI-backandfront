            <div class="col">
                <input type="date"  name="fecha_f" class="form-control" placeholder="fecha final">
            </div>
        </div>
        <div class="row">
            <div class="col">
                <input type="number"  name="cantidad" class="form-control" placeholder="cantidad" >
            </div>
            <div class="col">
                <input type="number"  name="prod_id" class="form-control" placeholder="Producto Id">
            </div>
            <div class="col">
                <input type="number"  name="venta_id" class="form-control" placeholder="venta Id">
            </div>
        </div>
        <button type="submit" class="btn btn-primary">
            buscar
        </button>
    </form>
    
