    <h1>Ventas</h1>
    <h4>Registrar una venta</h4>
    <form action="/guardarventa" method="post">
        <div class="row">
            <div class="col">
                <input type="text"  name="cliente" class="form-control" placeholder="Nombre del cliente">
            </div>
            <div class="col">
                <input type="number"  name="precio" class="form-control" placeholder="Precio">
            </div>
        </div>
        <div class="row">
            <div class="col">
                <input type="number"  name="cantidad" class="form-control" placeholder="cantidad" >
            </div>
            <div class="col">
                <input type="number"  name="prod_id" class="form-control" placeholder="Producto Id">
            </div>
            <div class="col">
                <input type="number"  name="venta_id" class="form-control" placeholder="venta Id">
            </div>
        </div>
        <button type="submit" class="btn btn-primary">
            Agregar
        </button>
    </form>

    <h2>ventas de un rango</h2>
